{
  "name": "vue-use-route-query-monorepo",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "switch-vue2": "cd packages/core && npm run switch-vue2",
    "switch-vue3": "cd packages/core && npm run switch-vue3",
    "test:core": "cd packages/core && npm run test",
    "test:vue2": "npm run switch-vue2 && cd tests/vue2 && npm run test",
    "test:vue3": "npm run switch-vue3 && cd tests/vue3 && npm run test",
    "test:all": "npm run test:core && npm run test:vue2 && npm run test:vue3",
    "build": "cd packages/core && npm run build",
    "demo": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "prerelease": "npm run lint && npm run test:all && npm run build",
    "release": "standard-version --preset @djaler/standard",
    "release:github": "conventional-github-releaser --preset @djaler/standard",
    "prepublishOnly": "cd packages/core && npm run publish && copyfiles CHANGELOG.md LICENSE README.md packages/core/publishDirectory"
  },
  "packageManager": "pnpm@7.1.6",
  "devDependencies": {
    "@djaler/conventional-changelog-standard": "1.2.0",
    "@djaler/eslint-config-typescript": "0.0.7",
    "conventional-github-releaser": "3.1.5",
    "copyfiles": "2.4.1",
    "eslint": "7.32.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "nano-staged": "0.8.0",
    "simple-git-hooks": "2.7.0",
    "standard-version": "9.5.0",
    "typescript": "4.7.2"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/simple-git-hooks && ./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "publishConfig": {
    "directory": "packages/core/publishDirectory"
  }
}
